import java.io.*;
import java.util.*;
 class solubility
{
    public static void main(String args[]) throws IOException
    {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        for(int i=0;i<t;i++)
        {
               int X = sc.nextInt();
               int A = sc.nextInt();
               int B = sc.nextInt();
               int sugar = A+(100-X)*B;
             int s = (sugar)*10;
               System.out.println(+ s);
        }
    }
}
